{
  "[css][html][json][jsonc][scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript][javascriptreact][plaintext][typescript][typescriptreact]": {
    "editor.formatOnSave": false
  },
  "[markdown][plaintext]": {
    "editor.quickSuggestions": false,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 90
  },

  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "cSpell.ignorePaths": [
    "**/.git/",
    "**/.pnp.*",
    "**/.settings",
    "**/.yarn",
    "**/bower_components",
    "**/node_modules",
    "**/package-lock.json",
    "**/posts/*.mdx",
    "**/vscode-extension",
    "**/yarn.lock"
  ],
  "cSpell.words": ["Blazity", "ccompli", "ccustom", "cmdrc", "corejs", "fullpagejs", "nextjs", "reactjs", "svgr", "swiper", "Vercel"],
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": true
  },
  "editor.comments.insertSpace": true,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modificationsIfAvailable",
  "editor.insertSpaces": true,
  "editor.rulers": [140],
  "editor.tabSize": 2,
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 140,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.packageManager": "yarn",
  "eslint.probe": ["css", "html", "javascript", "javascriptreact", "json", "jsonc", "markdown", "typescript", "typescriptreact"],
  "licenser.author": "Blazity",
  "licenser.disableAutoHeaderInsertion": true,
  "licenser.license": "MIT",
  "licenser.projectName": "next-saas-starter",
  "markdown.extension.toc.levels": "2..6",
  "markdown.extension.toc.omittedFromToc": {
    "README.md": ["## Table Of Contents"]
  },
  "markdownlint.ignore": ".markdownlintignore",
  "markdownlint.run": "onSave",
  "typescript.tsdk": "node_modules/typescript/lib"
}
